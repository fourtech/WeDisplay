<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/bnav_tab_background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="全程：0km"
                android:id="@+id/all_distance"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="剩余：0km"
                android:id="@+id/remain_distance"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="全程：0分钟"
                android:id="@+id/all_time"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="剩余：0分钟"
                android:id="@+id/remain_time"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="right|center_vertical"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <Button
            android:text="专业导航"
            android:id="@+id/pronavi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:text="多路线"
            android:id="@+id/route_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="🚚算路"
            android:id="@+id/truck_route_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:text="🚙算路"
            android:id="@+id/route_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginTop="30dp"
            android:text="新能源"
            android:id="@+id/new_energy"
            android:background="@drawable/bnav_setting_btn_bg_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/bnav_tab_background"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="1"
            android:text="0米"
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:tint="#000000"
            android:layout_weight="1"
            android:id="@+id/turnIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="红绿灯："
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/lights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>